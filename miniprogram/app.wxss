@import "style/main.wxss";
@import "style/icon.wxss";

page {
  --myColor: #ed8b8d;
}

.text-myColor,
.line-myColor,
.lines-myColor {
  color: var(--myColor);
}

.bg-myColor {
  background-color: var(--myColor);
  color: var(--white);
}

.scrollPage {
  height: 100vh;
}

/* 全局使用的容器，需要改进下。 */
.container {
  margin: 0 auto;
  text-align: center;
  margin-bottom: 10rpx;
}

.container.xs {
  max-width: 84%;
}

.container.sm {
  max-width: 88%;
}

.container.df {
  max-width: 92%;
}

.container.lg {
  max-width: 96%;
}

.kefu {
  width: 100%;
  padding-bottom: 40rpx;
  min-width: 350px;
}

.auth {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}