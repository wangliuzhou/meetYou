page {
  background-color: #f6f6f6;
}

.page-wrap {
  /* min-height: calc(100vh - 64rpx); */
  margin: 20rpx;
  background-color: #fff;
  padding: 0 32rpx 0 32rpx;
  border-radius: 12rpx;
}

.wrap-item {
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.addimg {
  width: 136rpx;
  height: 136rpx;
  border-radius: 136rpx;
}

.description {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
}

.footer::after {
  content: " ";
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  top: 50%;
  right: 2rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #999;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71,0.71,-.71,0.71,0,0);
}

.cm::after {
  content: "cm";
  display: inline-block;
  position: absolute;
  right: 0;
  margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
}

.kg::after {
  content: "kg";
  display: inline-block;
  position: absolute;
  right: 0;
  margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
}

.value-text {
  font-size: 32rpx;
  font-weight: 400;
  color: #999;
  min-width: 200rpx;
  height: 100rpx;
  direction: rtl;
  text-align: right;
  line-height: 100rpx;
}

.value-text.active {
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
}

.demoimg-list {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.demo-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 4rpx;
}

.demo-item {
  position: relative;
}

.demo-title {
  width: 100%;
  position: absolute;
  background-color: rgba(0,0,0,0.5);
  bottom: 0;
  left: 0;
  color: #fff;
  font-size: 24rpx;
}

.fg-des {
  margin-top: 30rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  padding: 30rpx 0;
}

.img-wrap-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.img-wrap-row .item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 300rpx;
}

.item-image {
  width: calc(100% - 30rpx);
  height: 200rpx;
  padding: 15rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-image .image-demo {
  width: 100%;
  height: 200rpx;
}

.item-image .image-camera {
  width: 64rpx;
  height: 64rpx;
  text-align: center;
  vertical-align: middle;
}

.item-des {
  color: #333;
  font-size: 28rpx;
  text-align: center;
  margin: 30rpx 0;
}

.check-status {
  width: 300rpx;
  height: 240rpx;
  position: absolute;
  top: calc(50% - 120rpx);
  left: calc(50% - 150rpx);
}