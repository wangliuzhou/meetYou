.kefu-wrap {
    width: calc(100%);
    background: #fff;
    border-radius: 16rpx;
    padding: 40rpx;
}

.temp-1 {
    font-size: 28rpx;
    color: #6c6c6c;
    letter-spacing: 1.76rpx;
    line-height: 32rpx;
    margin-bottom: 24rpx;
}

.temp-wrap-1 {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.qrcode {
    min-width: 144rpx;
    max-width: 144rpx;
    width: 144rpx;
    height: 144rpx;
    margin-right: 24rpx;
    margin-left: -6rpx;
}

.wrap-line1 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.temp-2 {
    font-size: 28rpx;
    color: #3c3c3c;
    letter-spacing: 0;
    text-align: justify;
    line-height: 28rpx;
}

.kefu-num {
    font-size: 28rpx;
    color: #fd6991;
    letter-spacing: 0;
    text-align: justify;
    line-height: 28rpx;
    font-weight: 600;
}

.copy-btn {
    background: #ebebeb;
    border-radius: 20rpx;
    font-size: 24rpx;
    color: #6c6c6c;
    letter-spacing: 0;
    line-height: 24rpx;
    padding: 8rpx 24rpx;
}